# ═══════════════════════════════════════════════════════════
# W.O.P.R. Jetson Orin Nano Deployment — Environment Config
# ═══════════════════════════════════════════════════════════

# --- Network ---
BLACKBOARD_HOST=0.0.0.0
BLACKBOARD_PORT=9700
BLACKBOARD_URL=http://blackboard:9700
UNIFI_MCP_HOST=0.0.0.0
UNIFI_MCP_PORT=9600
UNIFI_MCP_URL=http://unifi-mcp:9600
OLLAMA_HOST=0.0.0.0
OLLAMA_PORT=11434
OLLAMA_URL=http://ollama:11434
VOICE_HOST=voice
VOICE_PORT=9876

# --- UniFi Controller ---
UNIFI_HOST=192.168.100.1
UNIFI_PORT=443
UNIFI_USER=your_unifi_username
UNIFI_PASS=your_unifi_password
UNIFI_SITE=default
UNIFI_VERIFY_SSL=0

# --- WOPR Agent ---
DEVICE_DB_PATH=/data/wopr/wopr_devices.db
TRAINING_DATA_DIR=/data/wopr/training_data
LOG_FILE=/data/logs/wopr.log
WOPR_MODEL=joshua:cybersec
FLIPPER_MCP_URL=

# --- ESP32 Marauder (via Flipper Zero USB-UART Bridge) ---
MARAUDER_ENABLED=false
MARAUDER_DEVICE=/dev/ttyACM0

# --- Ollama ---
OLLAMA_MODELS=/data/ollama/models
OLLAMA_NUM_PARALLEL=1
OLLAMA_MAX_LOADED_MODELS=1

# --- Blackboard ---
BLACKBOARD_DB_PATH=/data/blackboard/blackboard.db

# --- Voice (piper-tts) ---
PIPER_VOICE=en_US-lessac-medium
PIPER_DATA_DIR=/data/voice
